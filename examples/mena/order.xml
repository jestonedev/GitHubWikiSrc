  <step plugin="SqlDataSource" action="SqlSelectTable" repeat="1">
    <input>
      <parameter name="query">SELECT * FROM sp_warrant_template WHERE id_warrant_template_type = 9 and id_warrant_template = [id_warrant_template]</parameter>
    </input>
